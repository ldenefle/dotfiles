bind generic + !git commit --amend --no-edit
bind main r !git commit --fixup=%(commit)
bind main R !git rebase -i %(commit)^ --autosquash
bind main w !git revert --no-commit %(commit)
bind main T !git checkout %(commit)
bind main <Space> refresh
bind main $ !git cherry-pick %(commit)
bind generic <Ctrl-f> scroll-page-down
bind generic <Ctrl-b> scroll-page-up
bind generic 0 !@sh -c  "git blame -L %(lineno),+1 %(file) | awk '{print $1}'"
bind generic 9 !@sh -c "echo -n %(commit) | xclip -selection c"

bind generic g move-first-line
bind generic G move-last-line

# Jump to the nest jump with Enter in Stage view
bind stage <Down> :/^@@
bind stage <Up> :?^@@
bind diff <Down> :/^@@
bind diff <Up> :?^@@

# Custom refresh mode
set refresh-mode = auto
set main-view-id = yes
set main-view-id-width = 8

set main-view-date = custom
set main-view-date-format = "%Y-%m-%d %H:%M"

